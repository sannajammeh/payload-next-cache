{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "ESNext",
    "target": "ESNext",
    "types": ["react/canary", "react", "node"],
    "skipLibCheck": true,
    "composite": false,
    "verbatimModuleSyntax": true,
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "declarationMap": false
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "node_modules/payload/dist/database/types"
  ]
}
